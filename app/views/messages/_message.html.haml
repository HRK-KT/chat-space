.Message-box{data: {message: {id: message.id}}}
  .Message-info
    .Message-info__user
      = message.user.name
    .Message-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message-body
    - if message.body.present?
      %p.Message-content
        = message.body
    = image_tag message.image.url, class: 'Message-image' if message.image.present?